                </div>


            </div>

        </div>
    </div>








    <!--  -->

    <hr>



    <!-- Reviews -->
    <div class="container">
        <h3>Reviews</h3>
        <div class="row">
            <div class="col-md-6">
                @foreach (var item in Model.Reviews)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">

                            <h4>@item.User.username</h4>
                        </div>
                        <div class="panel-body">
                            <p>@item.DescReview</p>
                        </div>
                        
                    </div>
                  }                

            </div>
        </div>
</body>
</html>