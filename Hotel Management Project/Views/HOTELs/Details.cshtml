                        <h5 class="mt-2">
                            Hotel's Rating
                        </h5>
                        <div class="d-flex justify-content-between m-1"></div>
                        <span class="badge bg-warning">@Model.Rating</span>



                    </div>


                </div>

            </div>
        </div>
        <!--  -->



        <div class="col-4">
            <div class="container mt-5 d-flex justify-content-center">


                <div class="card p-3 bg-secondary">
