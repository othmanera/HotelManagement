@model Hotel_Management_Project.Models.HOTEL

<!DOCTYPE html>
<html>
<head>

    <title>Hotel Details</title>

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <style>

        

        .card {
            width: 300px;
            color: #fff;
            border-radius: 8px;
        }

        .yellow-star {
            color: #fbfb16;
        }

        .muted {
            color: #eee;
        }

        .badge {
            padding: 7px;
            border-radius: 16px;
        }

        .valid {
            line-height: 9px !important
        }

        .user-profile img {
            margin-right: -10px;
        }
    </style>
</head>
<body>

    <div class="container">

        <h1 class="text-center">@Model.nomHotel</h1>

        <div class="container mt-5">

            <div class="row">
                @foreach (var item in Model.Images)
                {
                    <div class="col-md-4">
                        <img src="@item.ImageLink" class="img-responsive img-thumbnail">
                    </div>
                }
            </div>

        </div>

    </div>
    <hr>
    <div class="row">
        <!-- Rating -->

